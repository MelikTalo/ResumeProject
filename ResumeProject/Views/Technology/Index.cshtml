@using ResumeProject.Models
@model List<TblTecnology>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2> Yeni Teknoloji Girişi</h2>

<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Başlık</th>
    <th>Değer</th>
    <th>Sil</th>
    <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
     {
        count++;
        <tr>
        <td>@count</td>
        <td>@item.TecnologyTitle</td>
        <td>@item.TecnologyValue</td>
        <td><a href="/Technology/DeleteTechnology/@item.TecnologyID"class="btn btn-danger">Sil</a></td>
        <td><a href="/Technology/UpdateTechnology/@item.TecnologyID" class="btn btn-success">Güncelle</a></td>
        </tr>
     }
</table>
<a href="/Technology/AddTechnology" class="btn btn-primary">Yeni Teknoloji Girişi</a>
