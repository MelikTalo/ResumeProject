@using ResumeProject.Models
@model List<TblVideo>


<section class="w3l-index5" id="about">
    <div class="new-block py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            @foreach (var item in Model)
            {
                <div class="middle-section text-center">
                    <div class="section-width">

                        <h3 class="w3l-title-main"> @item.VideoTitle</h3>
                        <p class="mt-3">
                            @item.VideoDecription

                        </p>
                    </div>
                    <div class="history-info mt-5">
                        <div class="position-relative">
                            <img src=" ~/Content/starter/assets/images/blog9.jpg" class="img-fluid radius-image video-popup-image"
                                 alt="video-popup">

                            <a href="@item.VideoUrl" class="popup-with-zoom-anim play-view text-center position-absolute">
                                <span class="video-play-icon">
                                    <span class="fa fa-play"></span>
                                </span>
                            </a>

                            <!-- dialog itself, mfp-hide class is required to make dialog hidden -->
                            <div id="small-dialog" class="zoom-anim-dialog mfp-hide">
                                <iframe src="@item.VideoUrl" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>

                    <!-- dialog itself, mfp-hide class is required to make dialog hidden -->
                    <div id="small-dialog" class="zoom-anim-dialog mfp-hide">
                        <iframe src="@item.VideoUrl" allowfullscreen></iframe>
                    </div>

                </div>
            }
        </div>
    </div>
</section>

